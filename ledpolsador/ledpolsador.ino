/*************************************************************************************
**                                                                                  **
**             Aquest programa fa una lectura analgica del canal A0                 **
**             modula la intensitat del led amb PWM de la sortida 3                 **
**                                                                                  **
*************************************************************************************/
 
//******  Includes  ******************************************************************



//******  Variables  *****************************************************************

int sensorValue = 0;

//******  Includes  ******************************************************************
void setup() {                
  pinMode(3, OUTPUT);     
}



//******  Loop  **********************************************************************
void loop() {
  sensorValue = analogRead(A0);
  analogWrite(3, sensorValue/4);
}
